@model CRYBZ_CCSB.Models.ViewModels.MailViewModel
<h2>Email</h2>
<div class="row">
    <div class="col-md-8">
        <section id="emailtxt">
            <form class="mt-12 sm:mx-auto sm:max-w-lg sm:flex" asp-controller="SendEmail" asp-action="SendMail">
                <div class="min-w-0 flex-1">
                    <label for="cta-email" class="sr-only">Email address</label>
                    <input id="cta-email" type="email" class="block w-full border border-black rounded-md px-5 py-3 text-base text-gray-900 placeholder-gray-500 shadow-sm focus:outline-none focus:border-transparent focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-indigo-600" placeholder="Enter your email">
                    @Html.TextBox("emailtxt", (string)ViewBag.email)
                </div>
                <div class="mt-4 sm:mt-0 sm:ml-3">
                    <button type="submit" class="default_primary_button block w-full rounded-md border border-transparent px-5 py-3 text-base font-medium text-white shadow focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-indigo-600 sm:px-10">Aanmelden</button>
                </div>
            </form>
        </section>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}