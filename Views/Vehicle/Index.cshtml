@model CRYBZ_CCSB.Models.ViewModels.VehicleViewModel
<h2>Registreren</h2>
<form method="post" asp-action="Index" asp-controller="Vehicle">
    <h4>Voertuig Registreren</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <label class="col-md-2" asp-for="LicencePlate"></label>
        <div class="col-md-10">
            <input asp-for="LicencePlate" class="form-control" />
            <span asp-validation-for="LicencePlate" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-2" asp-for="VehicleType"></label>
        <div class="col-md-10">
            <select asp-for="VehicleType"
                    asp-items="@CRYBZ_CCSB.Utility.Helper.GetVehicleType()"
                    class="form-control">
                <option selected>- Selecteer Voertuigtype -</option>
            </select>
            <span asp-validation-for="VehicleType" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-2" asp-for="Brand"></label>
        <div class="col-md-10">
            <input asp-for="Brand" class="form-control" />
            <span asp-validation-for="Brand" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-2" asp-for="Type"></label>
        <div class="col-md-10">
            <input asp-for="Type" class="form-control" />
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-2" asp-for="Length"></label>
        <div class="col-md-10">
            <input asp-for="Length" class="form-control" />
            <span asp-validation-for="Length" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-2" asp-for="CustomerId"></label>
        <div class="col-md-10">
            <select asp-for="CustomerId"
                    asp-items="@(new SelectList(ViewBag.CustomerList, "Id", "Name"))"
                    class="form-control">
                <option selected>- Selecteer Eigenaar -</option>
            </select>
            <span asp-validation-for="CustomerId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10 offset-md-2">
            <input type="submit" value="Registreer" class="btn btn-success" />
        </div>
    </div>
</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}